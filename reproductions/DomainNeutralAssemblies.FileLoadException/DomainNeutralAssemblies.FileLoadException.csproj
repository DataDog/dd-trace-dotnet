<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net45;net451;net452;net46;net461;net462;net47;net471;net472;net48</TargetFrameworks>
    <IsPackable>false</IsPackable>
    <LoadManagedProfilerFromProfilerDirectory>true</LoadManagedProfilerFromProfilerDirectory>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\Datadog.Trace.ClrProfiler.Managed\Datadog.Trace.ClrProfiler.Managed.csproj" />
  </ItemGroup>

  <ItemGroup>
    <SubApplications Include="..\..\reproduction-dependencies\DomainNeutralAssemblies.App.NoBindingRedirects\DomainNeutralAssemblies.App.NoBindingRedirects.csproj">
      <Name>DomainNeutralAssemblies.App.NoBindingRedirects</Name>
    </SubApplications>
    <SubApplications Include="..\..\reproduction-dependencies\DomainNeutralAssemblies.App.HttpNoBindingRedirects\DomainNeutralAssemblies.App.HttpNoBindingRedirects.csproj">
      <Name>DomainNeutralAssemblies.App.HttpNoBindingRedirects</Name>
    </SubApplications>
    <SubApplications Include="..\..\reproduction-dependencies\DomainNeutralAssemblies.App.JsonNuGetRedirects\DomainNeutralAssemblies.App.JsonNuGetRedirects.csproj">
      <Name>DomainNeutralAssemblies.App.JsonNuGetRedirects</Name>
    </SubApplications>
    <SubApplications Include="..\..\reproduction-dependencies\DomainNeutralAssemblies.App.HttpBindingRedirects\DomainNeutralAssemblies.App.HttpBindingRedirects.csproj">
      <Name>DomainNeutralAssemblies.App.HttpBindingRedirects</Name>
    </SubApplications>
  </ItemGroup>

  <Target Name="ProduceSubApplications" AfterTargets="AfterBuild">
    <ConvertToAbsolutePath Paths="$(OutputPath)">
      <Output TaskParameter="AbsolutePaths" PropertyName="AbsoluteOutputPath" />
    </ConvertToAbsolutePath>
    <MSBuild Projects="@(SubApplications)" Targets="Restore;Build" Properties="OutputPath=$(AbsoluteOutputPath)\%(Name)\;TargetFramework=$(TargetFramework);ExcludeNativeProfiler=true;ExcludeManagedProfiler=true;LoadManagedProfilerFromProfilerDirectory=false" />
  </Target>

</Project>
