<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <targets>
        <!-- For the default SimpleLayout, you must explicitly extract the 'dd.trace-id' and 'dd.span_id' values -->
        <target name="textFile" xsi:type="File" fileName="logfile-textFile.log"
                layout="${date}|${level:uppercase=true}|${message} ${exception}|${logger}|${all-event-properties}|context properties: order-number=${mdlc:item=order-number},dd.trace_id=${mdlc:item=dd.trace_id},dd.span_id=${mdlc:item=dd.span_id}" />

        <!-- For JsonLayout when includeMdlc=true, you do not need to do any work to extract the 'dd.trace-id' and 'dd.span_id' values -->
        <target name="jsonFile-includeMdlc-true" xsi:type="File" fileName="logfile-jsonFile-includeMdlc-true.log">
            <!-- Documentation for JsonLayout can be found here: https://github.com/NLog/NLog/wiki/JsonLayout -->
            <layout xsi:type="JsonLayout" includeMdlc="true">
                <attribute name="time" layout="${longdate}" />
                <attribute name="level" layout="${level:upperCase=true}"/>
                <attribute name="message" layout="${message}" />
            </layout>
        </target>

        <!-- For JsonLayout when includeMdlc=false, you must explicitly extract the 'dd.trace-id' and 'dd.span_id' values -->
        <target name="jsonFile-includeMdlc-false" xsi:type="File" fileName="logfile-jsonFile-includeMdlc-false.log">
            <!-- Documentation for JsonLayout can be found here: https://github.com/NLog/NLog/wiki/JsonLayout -->
            <layout xsi:type="JsonLayout" includeMdlc="false">
                <attribute name="time" layout="${longdate}" />
                <attribute name="level" layout="${level:upperCase=true}"/>
                <attribute name="message" layout="${message}" />
                <attribute name="order-number" layout="${mdlc:item=order-number}"/>

                <!-- Manual changes for Trace Correlation Identifier Auto-Injection: start -->
                <attribute name="dd.trace_id" layout="${mdlc:item=dd.trace_id}"/>
                <attribute name="dd.span_id" layout="${mdlc:item=dd.span_id}"/>
                <!-- Manual changes for Trace Correlation Identifier Auto-Injection: end -->
            </layout>
        </target>
    </targets>

    <!-- rules to map from logger name to target -->
    <rules>
        <logger name="*" minlevel="Trace" writeTo="textFile,jsonFile-includeMdlc-true,jsonFile-includeMdlc-false" />
    </rules>
</nlog>