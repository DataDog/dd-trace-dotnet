<?xml version="1.0" encoding="UTF-8"?>

<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <?include $(sys.CURRENTDIR)\Config.wxi?>
  <Product Id="*"
           Name="Datadog APM for .NET"
           Language="1033"
           Version="$(var.Version)"
           Manufacturer="Datadog, Inc."
           UpgradeCode="fc228e86-eae2-4c2a-ae82-135b718c269e">
    <Package InstallerVersion="200"
             Compressed="yes"
             InstallScope="perMachine"
             Description="$(var.ProductName)"/>

    <!--
        <Property Id="ARPCOMMENTS">any comments</Property>
        <Property Id="ARPCONTACT">contact info</Property>
        <Property Id="ARPURLUPDATEINFO">URL for product updates</Property>
        <Property Id="ARPHELPTELEPHONE">URL for technical support</Property>
        <Property Id="ARPREADME">path</Property>
        <Property Id="ARPNOREMOVE">1</Property>
        <Property Id="ARPNOREPAIR">1</Property>
        <Property Id="ARPNOMODIFY">1</Property>
        <Property Id="ARPSIZE">32</Property>
        -->
    <Icon Id="datadog.ico" SourceFile="datadog-icon.ico"/>

    <Property Id="ARPPRODUCTICON">datadog.ico</Property>
    <Property Id="ARPURLINFOABOUT">https://datadoghq.com/</Property>
    <Property Id="ARPHELPLINK">https://datadoghq.com/support/</Property>
    <Property Id="WIXUI_INSTALLDIR" Value="INSTALLFOLDER"/>

    <Property Id="INSTALLFOLDER">
      <RegistrySearch Id="RegistrySearch" Type="raw" Root="HKLM" Win64="$(var.Win64)" Key="Software\Company\Product" Name="InstallLocation"/>
    </Property>

    <UIRef Id="WixUI_InstallDir_Custom"/>
    <WixVariable Id="WixUIBannerBmp" Value="banner.bmp"/>
    <WixVariable Id="WixUIDialogBmp" Value="dialog.bmp"/>
    <WixVariable Id="WixUILicenseRtf" Value="license.rtf"/>

    <MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed."/>
    <MediaTemplate/>

    <Feature Id="ProductFeature" Title="Datadog.Trace.ClrProfiler" Level="1">
      <ComponentGroupRef Id="Files.Managed.Net45"/>
      <ComponentGroupRef Id="Files.Managed.NetCoreApp20"/>
      <ComponentGroupRef Id="EnvironmentVariables"/>
      <ComponentGroupRef Id="Registry.EnvironmentVariables"/>

      <ComponentGroupRef Id="Files.Native.x86"/>

      <?if $(var.Platform) = x64 ?>
      <ComponentGroupRef Id="Files.Native.x64"/>
      <?endif ?>
    </Feature>
  </Product>

  <Fragment>
    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="$(var.PlatformProgramFilesFolder)">
        <Directory Id="ProgramFilesFolder.Datadog" Name="Datadog">
          <Directory Id="INSTALLFOLDER" Name="APM for .NET">
            <Directory Id="INSTALLFOLDER_32" Name="x86"/>
            <Directory Id="INSTALLFOLDER_64" Name="x64"/>
            <Directory Id="INSTALLFOLDER_NET45" Name="net45"/>
            <Directory Id="INSTALLFOLDER_NETCOREAPP20" Name="netcoreapp2.0"/>
          </Directory>
        </Directory>
      </Directory>
    </Directory>
  </Fragment>

  <Fragment>
    <ComponentGroup Id="Files.Managed.Net45" Directory="INSTALLFOLDER_NET45">
      <Component>
        <File Id="net45_Datadog.Trace.ClrProfiler.Managed.dll"
              Source="..\..\src\Datadog.Trace.ClrProfiler.Managed\bin\$(var.Configuration)\net45\Datadog.Trace.ClrProfiler.Managed.dll"
              KeyPath="yes" Checksum="yes" Assembly=".net"/>
      </Component>
      <Component>
        <File Id="net45_Datadog.Trace.dll"
              Source="..\..\src\Datadog.Trace.ClrProfiler.Managed\bin\$(var.Configuration)\net45\Datadog.Trace.dll"
              KeyPath="yes" Checksum="yes" Assembly=".net"/>
      </Component>
      <Component>
        <File Id="net45_MsgPack.dll"
              Source="..\..\src\Datadog.Trace.ClrProfiler.Managed\bin\$(var.Configuration)\net45\MsgPack.dll"
              KeyPath="yes" Checksum="yes" Assembly=".net"/>
      </Component>
      <Component>
        <File Id="net45_System.Runtime.InteropServices.RuntimeInformation.dll"
              Source="..\..\src\Datadog.Trace.ClrProfiler.Managed\bin\$(var.Configuration)\net45\System.Runtime.InteropServices.RuntimeInformation.dll"
              KeyPath="yes" Checksum="yes" Assembly=".net"/>
      </Component>
    </ComponentGroup>

    <ComponentGroup Id="Files.Managed.NetCoreApp20" Directory="INSTALLFOLDER_NETCOREAPP20">
      <Component>
        <File Id="netcoreapp2.0_Datadog.Trace.ClrProfiler.Managed.dll"
              Source="..\..\src\Datadog.Trace.ClrProfiler.Managed\bin\$(var.Configuration)\netcoreapp2.0\Datadog.Trace.ClrProfiler.Managed.dll"
              KeyPath="yes" Checksum="yes"/>
      </Component>
      <Component>
        <File Id="netcoreapp2.0_Datadog.Trace.dll"
              Source="..\..\src\Datadog.Trace.ClrProfiler.Managed\bin\$(var.Configuration)\netcoreapp2.0\Datadog.Trace.dll"
              KeyPath="yes" Checksum="yes"/>
      </Component>
      <Component>
        <File Id="netcoreapp2.0_Datadog.Trace.ClrProfiler.Managed.deps.json"
              Source="..\..\src\Datadog.Trace.ClrProfiler.Managed\bin\$(var.Configuration)\netcoreapp2.0\Datadog.Trace.ClrProfiler.Managed.deps.json"
              KeyPath="yes" Checksum="yes"/>
      </Component>
    </ComponentGroup>

    <?if $(var.Platform) = x64 ?>
    <ComponentGroup Id="Files.Native.x64" Directory="INSTALLFOLDER_64">
      <Component Win64="$(var.Win64)">
        <File Id="Datadog.Trace.ClrProfiler.Native.x64"
              Source="..\..\src\Datadog.Trace.ClrProfiler.Native\x64\$(var.Configuration)\$(var.NativeDllName)"
              Checksum="yes"/>
      </Component>
    </ComponentGroup>
    <?endif ?>

    <ComponentGroup Id="Files.Native.x86" Directory="INSTALLFOLDER_32">
      <Component Win64="$(var.Win64)">
        <File Id="Datadog.Trace.ClrProfiler.Native.x86"
              Source="..\..\src\Datadog.Trace.ClrProfiler.Native\Win32\$(var.Configuration)\$(var.NativeDllName)"
              Checksum="yes"/>
      </Component>
    </ComponentGroup>

    <ComponentGroup Id="EnvironmentVariables" Directory="INSTALLFOLDER">
      <Component Id="EnvironmentVariablesShared" Guid="{C314A305-9C24-4E46-9ECF-E5EEA703BDEA}">
        <CreateFolder/>
        <Environment Id="DATADOG_APM_DOTNET_HOME" Name="DATADOG_APM_DOTNET_HOME" Action="set" Permanent="no" System="yes" Value="[INSTALLFOLDER]" Part="all"/>

        <Environment Id="COR_ENABLE_PROFILING" Name="COR_ENABLE_PROFILING" Action="create" Permanent="no" System="yes" Value="0"/>
        <Environment Id="COR_PROFILER" Name="COR_PROFILER" Action="create" Permanent="no" System="yes" Value="$(var.ProfilerCLSID)"/>

        <!-- TODO: use the Windows Registry instead of COR_PROFILER_PATH so we can support both 32 and 64-bit applications -->
        <Environment Id="COR_PROFILER_PATH" Name="COR_PROFILER_PATH" Action="create" Permanent="no" System="yes" Value="[INSTALLFOLDER_64]$(var.NativeDllName)"/>

        <Environment Id="CORECLR_ENABLE_PROFILING" Name="CORECLR_ENABLE_PROFILING" Action="create" Permanent="no" System="yes" Value="0"/>
        <Environment Id="CORECLR_PROFILER" Name="CORECLR_PROFILER" Action="create" Permanent="no" System="yes" Value="$(var.ProfilerCLSID)"/>

        <!-- TODO: use the Windows Registry instead of COR_PROFILER_PATH so we can support both 32 and 64-bit applications -->
        <Environment Id="CORECLR_PROFILER_PATH" Name="COR_PROFILER_PATH" Action="create" Permanent="no" System="yes" Value="[INSTALLFOLDER_64]$(var.NativeDllName)"/>
      </Component>

      <Component Id="EnvironmentVariables32" Guid="{5206971B-1BCA-412A-BD1C-33EE76799399}">
        <CreateFolder/>
        <Environment Id="COR_PROFILER_PATH_32" Name="COR_PROFILER_PATH_32" Action="create" Permanent="no" System="yes" Value="[INSTALLFOLDER_32]$(var.NativeDllName)"/>
        <Environment Id="CORECLR_PROFILER_PATH_32" Name="CORECLR_PROFILER_PATH_32" Action="create" Permanent="no" System="yes" Value="[INSTALLFOLDER_32]$(var.NativeDllName)"/>
      </Component>

      <?if $(var.Platform) = x64 ?>
      <Component Id="EnvironmentVariables64" Guid="{D52A5BBD-FCA1-46D6-BFD5-AF5A883D5878}">
        <CreateFolder/>
        <Environment Id="COR_PROFILER_PATH_64" Name="COR_PROFILER_PATH_64" Action="create" Permanent="no" System="yes" Value="[INSTALLFOLDER_64]$(var.NativeDllName)"/>
        <Environment Id="CORECLR_PROFILER_PATH_64" Name="CORECLR_PROFILER_PATH_64" Action="create" Permanent="no" System="yes" Value="[INSTALLFOLDER_64]$(var.NativeDllName)"/>
      </Component>
      <?endif ?>
    </ComponentGroup>

    <ComponentGroup Id="Registry.EnvironmentVariables" Directory="INSTALLFOLDER">
      <Component Id="Registry.EnvironmentVariables.W3SVC.NetFramework" Guid="{702DB265-F33E-47F4-A6B0-E21FA0FC21C1}">
        <CreateFolder/>
        <RegistryKey Root="HKLM"
                     Key="System\CurrentControlSet\Services\W3SVC">
          <RegistryValue Type="string" Name="COR_ENABLE_PROFILING" Value="1" Action="write"/>
        </RegistryKey>
        <RegistryKey Root="HKLM"
                     Key="System\CurrentControlSet\Services\W3SVC">
          <RegistryValue Type="string" Name="COR_PROFILER" Value="$(var.ProfilerCLSID)" Action="write"/>
        </RegistryKey>
      </Component>

      <Component Id="Registry.EnvironmentVariables.WAS.NetFramework" Guid="{6CF8AB88-240E-4A0A-B630-43119C064AD4}">
        <RegistryKey Root="HKLM"
                     Key="System\CurrentControlSet\Services\WAS">
          <RegistryValue Type="string" Name="COR_ENABLE_PROFILING" Value="1" Action="write"/>
        </RegistryKey>
        <RegistryKey Root="HKLM"
                     Key="System\CurrentControlSet\Services\WAS">
          <RegistryValue Type="string" Name="COR_PROFILER" Value="$(var.ProfilerCLSID)" Action="write"/>
        </RegistryKey>
      </Component>

      <Component Id="Registry.EnvironmentVariables.W3SVC.NetCore" Guid="{8CFFD574-E886-477F-9CCD-27E1975D3431}">
        <RegistryKey Root="HKLM"
                     Key="System\CurrentControlSet\Services\W3SVC">
          <RegistryValue Type="string" Name="CORECLR_ENABLE_PROFILING" Value="1" Action="write"/>
        </RegistryKey>
        <RegistryKey Root="HKLM"
                     Key="System\CurrentControlSet\Services\W3SVC">
          <RegistryValue Type="string" Name="CORECLR_PROFILER" Value="$(var.ProfilerCLSID)" Action="write"/>
        </RegistryKey>
      </Component>

      <Component Id="Registry.EnvironmentVariables.WAS.NetCore" Guid="{8B6195F9-D2F1-4B57-BC2D-51D1D03760D6}">
        <RegistryKey Root="HKLM"
                     Key="System\CurrentControlSet\Services\WAS">
          <RegistryValue Type="string" Name="CORECLR_ENABLE_PROFILING" Value="1" Action="write"/>
        </RegistryKey>
        <RegistryKey Root="HKLM"
                     Key="System\CurrentControlSet\Services\WAS">
          <RegistryValue Type="string" Name="CORECLR_PROFILER" Value="$(var.ProfilerCLSID)" Action="write"/>
        </RegistryKey>
      </Component>
    </ComponentGroup>

    <ComponentGroup Id="Registry.COM" Directory="INSTALLFOLDER">
      <Component Id="Registry.COM" Guid="">
        <RegistryKey Root="HKLM"
                     Key="System\CurrentControlSet\Services\WAS">
          <RegistryValue Type="string" Name="CORECLR_ENABLE_PROFILING" Value="1" Action="write"/>
        </RegistryKey>
      </Component>
    </ComponentGroup>
  </Fragment>
</Wix>
