        <File Id="net461_GAC_Datadog.Trace.AspNet.dll"
              Source="$(var.MonitoringHomeDirectory)\net461\Datadog.Trace.AspNet.dll"
              KeyPath="yes" Checksum="yes" Assembly=".net"/>
