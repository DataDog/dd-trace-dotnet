{
  "version": 8,
  "$schema": "https://cmake.org/cmake/help/latest/_downloads/3e2d73bff478d88a7de0de736ba5e361/schema.json",
  "configurePresets": [
    {
      "hidden": true,
      "name": "msvc-base",
      "generator": "Ninja",
      "toolchainFile": "$env{VCPKG_ROOT}\\scripts\\buildsystems\\vcpkg.cmake",
      "cacheVariables": {
        "CMAKE_C_FLAGS": "$env{ADDITIONAL_C_FLAGS} /wd4477"
      }
    },
    {
      "hidden": true,
      "name": "clang-base",
      "cacheVariables": {
        "CMAKE_C_FLAGS": "$env{ADDITIONAL_C_FLAGS} -Wall -Wextra -fvisibility=hidden -fstrict-aliasing -funsigned-char -fwrapv -fno-stack-protector -Wconversion -Wno-implicit-int-conversion -Wno-sign-conversion -Wmissing-format-attribute -Wpointer-arith -Wformat-nonliteral -Winit-self -Wwrite-strings -Wshadow -Wparentheses -Wenum-conversion -Wswitch-enum -Wvla"
      }
    },
    {
      "hidden": true,
      "name": "clang-base-pedantic",
      "cacheVariables": {
        "CMAKE_C_FLAGS": "$env{ADDITIONAL_C_FLAGS} -pedantic-errors -Wall -Wextra -fvisibility=hidden -fstrict-aliasing -funsigned-char -fwrapv -fno-stack-protector -Wconversion -Wcast-align -Wno-sign-conversion -Wmissing-format-attribute -Wpointer-arith -Wformat-nonliteral -Winit-self -Wwrite-strings -Wshadow -Wparentheses -Wenum-conversion -Wswitch-enum -Wvla"
      }
    },
    {
      "name": "msvc-dev",
      "displayName": "Windows Developement",
      "inherits": "msvc-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_COMPILE_WARNING_AS_ERROR": "ON"
      },
      "environment": {
        "ADDITIONAL_C_FLAGS": "/std:c17"
      }
    },
    {
      "name": "msvc-ci",
      "displayName": "Windows CI",
      "inherits": "msvc-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_COMPILE_WARNING_AS_ERROR": "ON"
      },
      "environment": {
        "ADDITIONAL_C_FLAGS": "/std:c17"
      }
    },
    {
      "name": "msvc-release",
      "displayName": "Windows CI",
      "inherits": "msvc-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "DD_POLICY_BUILD_TESTS": "OFF",
        "DD_POLICY_BUILD_EXAMPLES": "OFF"
      },
      "environment": {
        "ADDITIONAL_C_FLAGS": "/std:c17"
      }
    },
    {
      "name": "clang-dev",
      "displayName": "Clang Development",
      "inherits": "clang-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_COMPILE_WARNING_AS_ERROR": "ON"
      },
      "environment": {
        "ADDITIONAL_C_FLAGS": "-std=c23"
      }
    },
    {
      "name": "clang-ci",
      "displayName": "Clang CI",
      "inherits": "clang-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_COMPILE_WARNING_AS_ERROR": "ON"
      },
      "environment": {
        "ADDITIONAL_C_FLAGS": "-std=c23"
      }
    },
    {
      "name": "clang-coverage",
      "displayName": "Clang Coverage",
      "inherits": "clang-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXE_LINKER_FLAGS": "-fprofile-arcs",
        "CMAKE_MODULE_LINKER_FLAGS": "-fprofile-arcs",
        "CMAKE_SHARED_LINKER_FLAGS": "-fprofile-arcs",
        "CMAKE_STATIC_LINKER_FLAGS": "-fprofile-arcs"
      },
      "environment": {
        "ADDITIONAL_C_FLAGS": "--coverage -fprofile-arcs -ftest-coverage"
      }
    }
  ]
}
