<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFrameworks Condition="'$(IncludeAllTestFrameworks)' == 'true'">netcoreapp3.1;net5.0;net6.0;net7.0</TargetFrameworks>
    <TargetFrameworks Condition="'$(IncludeAllTestFrameworks)' != 'true'">netcoreapp3.1;net7.0</TargetFrameworks>
    <OutputType>Exe</OutputType>
    <LangVersion>latest</LangVersion>
    <IsPackable>false</IsPackable>
    <GenerateDocumentationFile>false</GenerateDocumentationFile>

    <!-- default nuget version to make IDEs happy -->
    <DatadogTraceNuGetVersion Condition="$(DatadogTraceNuGetVersion) == ''">1.28.0</DatadogTraceNuGetVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Datadog.Trace" Version="$(DatadogTraceNuGetVersion)" />
  </ItemGroup>

</Project>
