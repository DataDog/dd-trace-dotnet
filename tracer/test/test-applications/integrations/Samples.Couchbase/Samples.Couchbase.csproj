<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <ApiVersion Condition="'$(ApiVersion)' == ''">2.7.26</ApiVersion>
    <DefineConstants Condition="'$(ApiVersion)'&lt;='2.4.0'">$(DefineConstants);COUCHBASE_2_2</DefineConstants>
    <OutputType>Exe</OutputType>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CouchbaseNetClient" Version="$(ApiVersion)" />

    <!-- There's a misconfiguration of dependencies in 2.2.8 -->
    <PackageReference Condition="'$(ApiVersion)' == '2.2.8'" Include="Common.Logging" Version="3.3.1" />
  </ItemGroup>

</Project>