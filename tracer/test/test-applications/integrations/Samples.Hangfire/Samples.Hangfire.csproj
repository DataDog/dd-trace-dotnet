<Project Sdk="Microsoft.NET.Sdk.Web">
  
  <PropertyGroup>
    <!-- System.Runtime.CompilerServices.Unsafe doesn't support netcoreapp2.1-->
    <!-- https://andrewlock.net/stop-lying-about-netstandard-2-support/-->
    <SuppressTfmSupportBuildWarnings>true</SuppressTfmSupportBuildWarnings>
    <ApiVersion Condition="'$(ApiVersion)' == ''">1.7.0</ApiVersion>
    <DefineConstants Condition="'$(ApiVersion)'&gt;='1.2.0'">$(DefineConstants);OTEL_1_2</DefineConstants>
    <Nullable>enable</Nullable>
    <GenerateTargetFrameworkAttribute>false</GenerateTargetFrameworkAttribute>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Hangfire" Version="1.7.0" />
    <PackageReference Include="Hangfire.MemoryStorage" Version="1.4.0" />
  </ItemGroup>


  <!-- Dependencies for netcoreapp -->
  <ItemGroup Condition=" $(TargetFramework.StartsWith('netcoreapp')) ">
    <PackageReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>
  
</Project>