<Project Sdk="Microsoft.NET.Sdk.Web">
  
  <PropertyGroup>
    <!-- System.Runtime.CompilerServices.Unsafe doesn't support netcoreapp2.1-->
    <!-- https://andrewlock.net/stop-lying-about-netstandard-2-support/-->
    <SuppressTfmSupportBuildWarnings>true</SuppressTfmSupportBuildWarnings>
    <ApiVersion Condition="'$(ApiVersion)' == ''">1.7.0</ApiVersion>
    <Nullable>enable</Nullable>
    <GenerateTargetFrameworkAttribute>false</GenerateTargetFrameworkAttribute>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Hangfire" Version="$(ApiVersion)" />
    <PackageReference Include="Hangfire.MemoryStorage" Version="1.4.0" />
    <PackageReference Include="System.Diagnostics.DiagnosticSource" Version="9.0.8" />
  </ItemGroup>
  
</Project>