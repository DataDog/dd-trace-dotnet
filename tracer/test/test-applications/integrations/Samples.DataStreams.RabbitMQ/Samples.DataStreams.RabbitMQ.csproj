<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <ApiVersion Condition="'$(ApiVersion)' == ''">6.0.0</ApiVersion>
    <DefineConstants Condition="$(ApiVersion) &gt;= 6.5.0">$(DefineConstants);RABBITMQ_6_5_0</DefineConstants>
    <DefineConstants Condition="$(ApiVersion) &gt;= 6.4.0">$(DefineConstants);RABBITMQ_6_4_0</DefineConstants>
    <DefineConstants Condition="$(ApiVersion) &gt;= 6.3.0">$(DefineConstants);RABBITMQ_6_3_0</DefineConstants>
    <DefineConstants Condition="$(ApiVersion) &gt;= 6.2.0">$(DefineConstants);RABBITMQ_6_2_0</DefineConstants>
    <DefineConstants Condition="$(ApiVersion) &gt;= 6.1.0">$(DefineConstants);RABBITMQ_6_1_0</DefineConstants>
    <DefineConstants Condition="$(ApiVersion) &gt;= 6.0.0">$(DefineConstants);RABBITMQ_6_0</DefineConstants>
    <DefineConstants Condition="$(ApiVersion) &gt;= 5.0.0">$(DefineConstants);RABBITMQ_5_0</DefineConstants>
    <DefineConstants Condition="$(ApiVersion) &gt;= 4.0.0">$(DefineConstants);RABBITMQ_4_0</DefineConstants>
    <DefineConstants Condition="$(ApiVersion) &gt;= 3.0.0">$(DefineConstants);RABBITMQ_3_0</DefineConstants>
    <RequiresDockerDependency>true</RequiresDockerDependency>

    <!-- Required to build multiple projects with the same Configuration|Platform -->
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <GenerateTargetFrameworkAttribute>false</GenerateTargetFrameworkAttribute>
  </PropertyGroup>
  
  <ItemGroup>
    <PackageReference Include="RabbitMQ.Client" Version="$(ApiVersion)" />
  </ItemGroup>

  <!-- Package versions < 5.x.x do not support netstandard2.0 and have package resolution issues unless directly referencing these packages -->
  <ItemGroup Condition="$(ApiVersion) &lt; 5.0.0">
    <PackageReference Include="System.Net.NameResolution" Version="4.3.0" />
    <PackageReference Include="System.Net.Primitives" Version="4.3.0" />
  </ItemGroup>
  
</Project>
