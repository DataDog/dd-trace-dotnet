<Project Sdk="Microsoft.NET.Sdk.Web">
  
  <PropertyGroup>
    <!-- override to remove not supported platforms -->
    <TargetFrameworks>net5.0;net6.0;netcoreapp3.1</TargetFrameworks>
    
    <!-- Required to build multiple projects with the same Configuration|Platform, which is needed for the CI library/version matrix -->
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <GenerateTargetFrameworkAttribute>false</GenerateTargetFrameworkAttribute>
  </PropertyGroup>
  
  <ItemGroup>
    <Compile Include="..\Samples.HotChocolate12\Mutation.cs" Link="Mutation.cs" />
    <Compile Include="..\Samples.HotChocolate12\Program.cs" Link="Program.cs" />
    <Compile Include="..\Samples.HotChocolate12\Query.cs" Link="Query.cs" />
    <Compile Include="..\Samples.HotChocolate12\Startup.cs" Link="Startup.cs" />
  </ItemGroup>
  
  <ItemGroup>
    <Content Include="..\Samples.HotChocolate12\Properties\launchSettings.json" Link="Properties\launchSettings.json" />
  </ItemGroup>
  
  <ItemGroup>
    <PackageReference Include="HotChocolate.AspNetCore" Version="11.3.8" />
    <PackageReference Include="Microsoft.AspNetCore" Version="2.0.0" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="3.1.4" />
  </ItemGroup>
  
  <ItemGroup>
    <Folder Include="Properties\" />
  </ItemGroup>

</Project>
