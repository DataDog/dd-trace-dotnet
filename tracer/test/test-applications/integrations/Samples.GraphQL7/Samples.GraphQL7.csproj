<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFrameworks>netcoreapp3.1;net5.0;net6.0;net7.0</TargetFrameworks>
    <ApiVersion Condition="'$(ApiVersion)' == ''">7.3.0</ApiVersion>

    <!-- Required to build multiple projects with the same Configuration|Platform, which is needed for the CI library/version matrix -->
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <GenerateTargetFrameworkAttribute>false</GenerateTargetFrameworkAttribute>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="GraphQL" Version="$(ApiVersion)" />
    <PackageReference Include="Microsoft.AspNetCore" Version="2.2.0" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="5.0.0" />
    <PackageReference Include="System.Runtime.CompilerServices.Unsafe" Version="4.7.1" />
    <PackageReference Include="System.Reactive.Linq" Version="4.4.1" />
  </ItemGroup>

  <ItemGroup Condition="$(ApiVersion) &gt;= 7.0.0">
    <PackageReference Include="GraphQL.Server.All" Version="7.3.0" />
    <PackageReference Include="GraphQL.NewtonsoftJson" Version="7.3.0" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="StarWars\" />
  </ItemGroup>

</Project>
