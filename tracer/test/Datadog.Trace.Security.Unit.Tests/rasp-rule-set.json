{
  "version": "2.2",
  "metadata": {
    "rules_version": "1.3.0"
  },
  "rules": [
    {
      "id": "rasp-001-001",
      "name": "Path traversal attack",
      "tags": {
        "type": "lfi",
        "category": "vulnerability_trigger",
        "module": "rasp"
      },
      "conditions": [
        {
          "operator": "match_regex",
          "parameters": {
            "inputs": [
              {
                "address": "server.io.fs.file"
              }
            ],
            "regex": ".*",
            "options": {
              "case_sensitive": false,
              "min_length": 2
            }
          }
        }
      ],
      "on_match": [
        "stack_trace"
      ]
    }
  ]
}