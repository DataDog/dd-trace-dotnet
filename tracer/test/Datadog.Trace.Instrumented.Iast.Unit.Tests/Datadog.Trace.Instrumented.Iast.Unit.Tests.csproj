<Project Sdk="Microsoft.NET.Sdk">
  
  <ItemGroup>
    <ProjectReference Include="..\..\src\Datadog.Trace\Datadog.Trace.csproj" />
  </ItemGroup>

  <PropertyGroup Condition="$([MSBuild]::IsOSPlatform('Linux'))">
    <RunSettingsFilePath>$(MSBuildProjectDirectory)\generated.linux.runsettings</RunSettingsFilePath>
  </PropertyGroup>

  <PropertyGroup Condition="$([MSBuild]::IsOSPlatform('Windows'))">
    <RunSettingsFilePath>$(MSBuildProjectDirectory)\generated.windows.runsettings</RunSettingsFilePath>
  </PropertyGroup>

  <ItemGroup>
    <None Update="wrong-tags-rule-set.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="wrong-tags-name-rule-set.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="rule-data1.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="rule-data2.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
   
  <PropertyGroup Condition="$([MSBuild]::IsOSPlatform('Windows')) AND $(TargetFramework.StartsWith('net7'))">
    <PostBuildEvent>echo Generating Windows runsettings file</PostBuildEvent>
    <PostBuildEvent>$(MSBuildProjectDirectory)\\generaterunsettings.bat</PostBuildEvent>
  </PropertyGroup>
  <PropertyGroup Condition="$([MSBuild]::IsOSPlatform('Linux')) AND $(TargetFramework.StartsWith('net7'))">
    <PostBuildEvent>echo Generating Linux runsettings file</PostBuildEvent>
    <PostBuildEvent>chmod 777 $(MSBuildProjectDirectory)\\generaterunsettings.sh</PostBuildEvent>
    <PostBuildEvent>$(MSBuildProjectDirectory)\\generaterunsettings.sh</PostBuildEvent>
  </PropertyGroup>
</Project>
