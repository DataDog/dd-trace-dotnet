<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <targets>
        <!-- For the default SimpleLayout, you must explicitly extract the 'dd.trace_id' and 'dd.span_id' values using the ${mdc:item=String} syntax (see: https://github.com/NLog/NLog/wiki/mdc-Layout-Renderer) -->
        <!-- Additionally, Datadog will only parse log properties if they are in a JSON-like map, and the values for dd.trace_id and dd.span_id must be surrounded by quotes (see: https://github.com/NLog/NLog/wiki/EventProperties-Layout-Renderer#rendering-options) -->
        <!--
            Additions to layout:
            - layout begins with '${longdate}|${level:uppercase=true}|${logger}|{dd.trace_id=${mdc:item=dd.trace_id:format=@}, dd.span_id=${mdc:item=dd.span_id:format=@}}'
        -->
        <target name="textFile" xsi:type="File" fileName="log-NLog45-textFile.log"
                layout="${longdate}|${level:uppercase=true}|${logger}|{dd.trace_id=${mdc:item=dd.trace_id:format=@}, dd.span_id=${mdc:item=dd.span_id:format=@}} ${message}" />

        <!-- For JsonLayout when includeMdc=true, you do not need to do any additional work to extract the 'dd.trace_id' and 'dd.span_id' values (see: https://github.com/NLog/NLog/wiki/JsonLayout) -->
        <!--
            Additions to layout: none
        -->
        <target name="jsonFile-includeMdc-true" xsi:type="File" fileName="log-NLog45-jsonFile-includeMdc-true.log">
            <layout xsi:type="JsonLayout" includeMdc="true">
                <attribute name="time" layout="${longdate}" />
                <attribute name="level" layout="${level:upperCase=true}"/>
                <attribute name="message" layout="${message}" />
                <attribute name="exception" layout="${exception:format=ToString}" />
            </layout>
        </target>

        <!-- For JsonLayout when includeMdc=false, you must explicitly extract the 'dd.trace_id' and 'dd.span_id' values using new <attribute> nodes (see: https://github.com/NLog/NLog/wiki/JsonLayout) -->
        <!--
            Additions to layout:
            - <attribute name="dd.trace_id" layout="${mdc:item=dd.trace_id}"/>
            - <attribute name="dd.span_id" layout="${mdc:item=dd.span_id}"/>
        -->
        <target name="jsonFile-includeMdc-false" xsi:type="File" fileName="log-NLog45-jsonFile-includeMdc-false.log">
            <layout xsi:type="JsonLayout" includeMdc="false">
                <attribute name="time" layout="${longdate}" />
                <attribute name="level" layout="${level:upperCase=true}"/>
                <attribute name="message" layout="${message}" />
                <attribute name="exception" layout="${exception:format=ToString}" />

                <!-- Manual changes: start -->
                <attribute name="dd.trace_id" layout="${mdc:item=dd.trace_id}"/>
                <attribute name="dd.span_id" layout="${mdc:item=dd.span_id}"/>
                <!-- Manual changes: end -->
            </layout>
        </target>
    </targets>

    <!-- rules to map from logger name to target -->
    <rules>
        <logger name="*" minlevel="Trace" writeTo="textFile,jsonFile-includeMdc-true,jsonFile-includeMdc-false" />
    </rules>
</nlog>